<!DOCTYPE html>
<html>
  <head>
    <title>Quiz1</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>


  <body>

    <!-- Button trigger modal -->
    <button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#myModal">
      Add Player
    </button>

    <!-- Modal -->
    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">Ã—</span>
            </button>
            <h4 class="modal-title" id="myModalLabel">Contribute <%= simple_form_for @skol do |f| %>
        <div class="modal-body">
          <%= f.input :player, label: "Who is the player you want to add?", placeholder: "Randy Moss." %>
          <br />
          <%= f.input :position, label: "What position did this player play?", placeholder: "WR" %>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          <%= f.submit 'Create', class: 'btn btn-danger' %>
        </div>
      <% end %>
          </div>
        </div>
      </div>
    </div>

    <nav class="navbar navbar-toggleable-md navbar-inverse bg-inverse">
      <%= link_to 'SKOL', root_path, class: 'navbar-brand' %>
    </nav>
    <div class="container">
      <%= yield %>
    </div>

    <div class="footer">
      <div class="container">
        <div class="row">
      <div class="col-6 footer-blurb">
        Created and styled by <%= link_to "Dalton Sherwin", "https://github.com/DaltonSherwin" %>
      </div>
      </div>
    </div>
  </body>
</html>
